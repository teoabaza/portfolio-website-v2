<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /

    # Handle requests for existing files or directories
    RewriteCond %{REQUEST_FILENAME} -f [OR]
    RewriteCond %{REQUEST_FILENAME} -d
    RewriteRule ^ - [L]

    # Rewrite everything else to index.html
    RewriteRule ^ index.html [L]
</IfModule>
